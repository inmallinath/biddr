<h3> Sign - In</h3>
<br />
<%= form_tag sessions_path, class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :email, "Registered Email", :class=>"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= email_field_tag :email, "", class: "form-control", autofocus: true, placeholder: "youremail@somedomain.com"%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password", class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= password_field_tag :password, "", class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-1">
      <%= submit_tag "Sign In", class: "btn btn-primary" %>
    </div>
<%end%>
